<p id="notice"><%= notice %></p>

<h1>Craftkits</h1>

<table>
  <thead>
    <tr>
      <th>Craft</th>
      <th>References</th>
      <th>Donatekit</th>
      <th>Qty</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @craftkits.each do |craftkit| %>
      <tr>
        <td><%= craftkit.craft %></td>
        <td><%= craftkit.references %></td>
        <td><%= craftkit.donatekit_id %></td>
        <td><%= craftkit.qty %></td>
        <td><%= link_to 'Show', craftkit %></td>
        <td><%= link_to 'Edit', edit_craftkit_path(craftkit) %></td>
        <td><%= link_to 'Destroy', craftkit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

